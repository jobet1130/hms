{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@/css/*": ["./home/static/css/*", "./hms/static/css/*"],
      "@/js/*": ["./hms/static/js/*"]
    }
  },
  "include": [
    "**/*.ts", 
    "**/*.tsx", 
    "hms/static/js/**/*.js",
    "hms/static/js/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
